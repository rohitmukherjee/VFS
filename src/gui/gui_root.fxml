<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10.0" prefHeight="575.0" prefWidth="394.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="gui.Controller">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
  <Label style="-fx-font: NORMAL 12 Tahoma" text="Present Working Directory" GridPane.columnIndex="0" GridPane.rowIndex="0" />
  <fx:include source="children_list_view.fxml" GridPane.columnIndex="0" GridPane.rowIndex="1" />
  <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
    <!-- change the onAction tags for these to match -->
    <Button onAction="#handleImportFile" text="Import File" />
    <Button onAction="#handleExportFile" text="Export File" />
    <Button onAction="#handleCopyFile" text="Copy File" />
    <Button onAction="#handleMoveFile" text="Move File" />
  </HBox>
  <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="3">
    <Button onAction="#handleAddDirectory" text="Add Directory" />
    <Button onAction="#handleCreateDirectory" text="Create Directory" />
    <!-- should add this to controller fxnality
          <Button text="Move Directory" onAction="#handleMoveDirectory"/> -->
    <Button onAction="#handleDeleteDirectory" text="Delete Directory" />
  </HBox>
  <HBox alignment="BOTTOM_LEFT" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="4">
    <TextField fx:id="sourceField" prefWidth="90.0" promptText="Source" />
    <TextField fx:id="destinationField" prefWidth="90.0" promptText="Destination" />
  </HBox>
</GridPane>
